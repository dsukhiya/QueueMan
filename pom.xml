<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>QueueMan</groupId>
    <artifactId>QueueMan</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>war</packaging>


    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.6</version>
                <configuration>
                    <webResources>
                        <resource>
                            <directory>${basedir}\web\resources\assets</directory>
                            <targetPath>resources/assets</targetPath>
                            <includes>
                                <include>**/*.*</include>
                            </includes>
                            <filtering>false</filtering>
                        </resource>
                        <resource>
                            <directory>${basedir}\web\resources\conf</directory>
                            <targetPath>resources/conf</targetPath>
                            <includes>
                                <include>**/*.*</include>
                            </includes>
                            <filtering>false</filtering>
                        </resource>
                        <resource>
                            <directory>${basedir}\web\resources\images</directory>
                            <targetPath>resources/images</targetPath>
                            <includes>
                                <include>**/*.*</include>
                            </includes>
                            <filtering>false</filtering>
                        </resource>
                        <resource>
                            <directory>${basedir}\web\resources\python</directory>
                            <targetPath>resources/python</targetPath>
                            <includes>
                                <include>**/*.*</include>
                            </includes>
                            <filtering>false</filtering>
                        </resource>
                        <resource>
                            <directory>${basedir}\web\resources\ui</directory>
                            <targetPath>resources/ui</targetPath>
                            <includes>
                                <include>*.jsp</include>
                            </includes>
                            <filtering>true</filtering>
                        </resource>
                        <resource>
                            <directory>${basedir}\web\WEB-INF</directory>
                            <targetPath>/WEB-INF</targetPath>
                            <includes>
                                <include>web.xml</include>
                            </includes>
                            <filtering>true</filtering>
                        </resource>
                        <resource>
                            <directory>${basedir}\web\WEB-INF</directory>
                            <targetPath>/WEB-INF</targetPath>
                            <includes>
                                <include>spring-dispatcher-servlet.xml</include>
                            </includes>
                        </resource>
                        <resource>
                            <directory>${basedir}\web\WEB-INF</directory>
                            <targetPath>/WEB-INF</targetPath>
                            <includes>
                                <include>jdbc.properties</include>
                            </includes>
                            <filtering>true</filtering>
                        </resource>
                        <resource>
                            <directory>${basedir}\src\main\java</directory>
                            <targetPath>/WEB-INF</targetPath>
                            <includes>
                                <include>applicationContext.xml</include>
                            </includes>
                            <filtering>true</filtering>
                        </resource>
                        <resource>
                            <directory>${basedir}\src\main\java</directory>
                            <targetPath>/WEB-INF/classes</targetPath>
                            <includes>
                                <include>hibernate.cfg.xml</include>
                            </includes>
                            <filtering>true</filtering>
                        </resource>
                    </webResources>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
